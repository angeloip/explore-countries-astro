---
import { countryData } from '../data'
const countries = countryData.slice(0, 6)
---

{
  countries.map((country) => (
    <a
      href={`/country/${country.name.common}`}
      class="hover:scale-[1.02] transition "
    >
      <article class="dark:bg-[#2B3845] rounded-lg overflow-hidden shadow-md shadow-zinc-700">
        <picture>
          <img
            src={country.flags.png}
            alt={country.name.common}
            class="w-full"
            transition:name=`picture ${country.name.common}`
          />
        </picture>
        <div class="px-6 py-4">
          <h3 class="text-xl font-bold mb-4" transition:name=`title ${country.name.common}`>{country.name.common}</h3>
          <p class="flex gap-2">
            <span >Population:</span>
            <span class="text-gray-400">{country.population}</span>
          </p>
          <p class="flex gap-2">
            <span >Capital:</span>
            <span class="text-gray-400">{country.capital}</span>
          </p>
          <p class="flex gap-2">
            <span >Region:</span>
            <span class="text-gray-400">{country.region}</span>
          </p>
        </div>
      </article>
    </a>
  ))
}
